    <body>
        <div class="hero-image">
            <a href="/login/" class="login-link">Login</a>
            <div class="hero-text">
                <h1>RENOVA</h1>
                <h3>GENERAL CONTRACTING</h3>
            </div>
        </div>

        <% if (segments) { %>
            <% if (segments) { %>
                <% for (let i = 0; i < segments.length; i++) { %>
                  <section class="<%= i % 2 === 0 ? 'section-even' : 'section-odd' %>">
                    <img class="section-image" src="<%= segments[i].imageUrl %>" alt="<%= segments[i].title %>">
                    <div class="section-text">
                      <h2><%= segments[i].title %></h2>
                      <p><%= segments[i].content %></p>
                    </div>
                  </section>
                <% } %>
              <% } else { %>
                <% "" %>
              <% }} %>
        <section class="carousel-section">
            <div id="carouselInterval" class="carousel slide m-auto" data-bs-ride="carousel">
              <div class="carousel-inner">
                <% if (images) { %>
                    <% for (const image of images) { %>
                      <div class="carousel-item <%= image.order === 1 ? "active" : "" %>" data-bs-interval="3000">
                        <img src="<%= image.imageUrl %>" class="d-block w-100" alt="<%= image.title %>">
                      </div>
                    <% } %>
                <% } else { %>
                    ""
                <% } %>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselInterval" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselInterval" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          </section>

        <footer>
            <div class="footer-links">
                <a href="https://www.instagram.com/renovagc/">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="https://www.linkedin.com/company/renovagc/">
                    <i class="fab fa-linkedin"></i>
                </a>
            </div>
            <p>&copy; 2023 Renova General Contracting</p>
        </footer>
    
